<div class="container mt-5">
  <div class="row">
    <div class="col">

      <h1 class="text-center display-4 mb-3">Add Contact</h1>
      <form action="/contact" method="post">

        <div class="form-floating mb-3">
          <input type="text" class="form-control" name="name" id="name" placeholder="Nasheh" required>
          <label for="name">Name</label>
        </div>
        <div class="form-floating mb-3">
          <input type="text" class="form-control" name="phone" id="phone" placeholder="08123456789" required>
          <label for="phone">Phone</label>
        </div>
        <div class="form-floating mb-3">
          <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com">
          <label for="email">Email</label>
        </div>

        <button type="submit" class="btn btn-success rounded-pill"><i class="bi bi-plus-circle"></i></button>
      </form>

    </div>
  </div>