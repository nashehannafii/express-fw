<div class="container mt-3">
  <div class="row pt-5">
    <div class="col ">

      <h2 class="display-4 text-center">Daftar Kontak</h2>
      <p class="lead  text-center">--------------</p>
      <a href="/contact/add" class="btn btn-success rounded-pill mb-3"><i class="bi bi-plus-circle"></i> Tambah</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <strong>Success!</strong> <%= msg %>
        </div>
      <% } %>

      <% if (contacts.length === 0) { %>
      <div class="alert alert-danger" role="alert">
        Data Contact Tidak Ada <br>
        <!-- <a href="/contact" class="alert-link">&laquo; halaman Contact</a> -->
      </div>
      <% } else { %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col" class=" text-center">No</th>
            <th scope="col" class=" text-center">Nama</th>
            <th scope="col" class=" text-center">Nomor HP</th>
            <th scope="col" class=" text-center">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% i=1 
          contacts.forEach(contact => { %>
          <tr>
            <th scope="row" class=" text-center"><%= i %> </th>
            <td><%= contact.name %> </td>
            <td class="text-center"><%= contact.phone %> </td>
            <td class="text-center">
              <a href="/contact/<%= contact.name %>" class="btn btn-info badge rounded-pill"><i class="bi bi-info-circle"></i></a>
              <a href="/contact/edit/<%= contact.name %>" class="btn btn-warning badge rounded-pill"><i class="bi bi-pencil-square"></i></a>
              <a href="/contact/delete/<%= contact.name %>" class="btn btn-danger badge rounded-pill" onclick="return confirm('Apakah data yakin akan dihapus ?')"><i class="bi bi-x-circle"></i></i></a>
            </td>
          </tr>
          <% i++ }) %>
        </tbody>
      </table>

      <% } %>

    </div>
  </div>
</div>